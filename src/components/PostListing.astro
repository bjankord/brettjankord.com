---
const { posts } = Astro.props;
---
<ul>
  {posts.map((post) => (
    <li>
      <time datetime={post.frontmatter.pubDate}>
        {new Date(post.frontmatter.pubDate).toLocaleDateString('en-us', {
          year: 'numeric',
          month: 'short',
          day: 'numeric',
        })}
      </time>
      <a href={post.url}>{post.frontmatter.title}</a>
    </li>
  ))}
</ul>
<style>
  ul {
    list-style-type: none;
    padding: unset;
  }
  ul li {
    display: flex;
  }
  ul li time {
    flex: 0 0 130px;
    font-style: italic;
    color: #888;
  }
  ul li a:visited {
    color: #8e32dc;
  }
</style>
